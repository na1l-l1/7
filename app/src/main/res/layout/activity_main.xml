<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#ECEFF1">

    <EditText
        android:id="@+id/editFileData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Введите текст"
        android:minHeight="50dp"
        android:padding="10dp"
        android:textSize="16sp"/>

    <Button
        android:id="@+id/btnSaveFile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Сохранить в файл"
        android:backgroundTint="#009688"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/btnLoadFile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Обновить список файлов"
        android:backgroundTint="#607D8B"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/btnCreateFile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Создать новый файл"
        android:backgroundTint="#3F51B5"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/textFileData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Выберите файл из списка"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp" />

    <ListView
        android:id="@+id/listViewFiles"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="10dp"/>
</LinearLayout>
